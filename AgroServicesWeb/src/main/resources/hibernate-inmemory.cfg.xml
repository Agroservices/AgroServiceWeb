<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.H2Dialect</property>
    <property name="hibernate.connection.driver_class">org.h2.Driver</property>
    <property name="hibernate.connection.url">jdbc:h2:mem:test</property>    
    <property name="hibernate.hbm2ddl.auto">create</property>
    <property name="hibernate.show_sql">true</property>
    <mapping class="com.agroservices.model.Despacho"/>
    <mapping class="com.agroservices.model.Producto"/>
    <mapping class="com.agroservices.model.DetalleFacturaId"/>
    <mapping class="com.agroservices.model.DetalleFactura"/>
    <mapping class="com.agroservices.model.ProductoEnVenta"/>
    <mapping class="com.agroservices.model.Ruta"/>
    <mapping class="com.agroservices.model.Ubicacion"/>
    <mapping class="com.agroservices.model.Vehiculo"/>
    <mapping class="com.agroservices.model.Novedad"/>
    <mapping class="com.agroservices.model.Factura"/>
    <mapping class="com.agroservices.model.Minorista"/>
    <mapping class="com.agroservices.model.Transportista"/>
    <mapping class="com.agroservices.model.Venta"/>
    <mapping class="com.agroservices.model.Campesino"/>
    <mapping class="com.agroservices.model.TransaccionBancaria"/>
    </session-factory>  
</hibernate-configuration>


 